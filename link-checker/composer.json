{
    "name": "contao-docs/link-checker",
    "description": "A command to check for broken links on docs.contao.org",
    "type": "project",
    "require": {
        "php": "^8.1",
        "symfony/console": "^7.1",
        "symfony/lock": "^7.1",
        "symfony/rate-limiter": "^7.1",
        "terminal42/escargot": "^1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Yanick Witschi",
            "email": "yanick.witschi@terminal42.ch"
        }
    ],
    "autoload": {
        "psr-4": {
            "Contao\\Docs\\LinkChecker\\": "src"
        }
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
